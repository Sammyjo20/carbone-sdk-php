{
    "name": "carboneio/carbone-carbone-sdk-php-php",
    "description": "Official Carboneio PHP SDK to generate document through the Carbone CLOUD API.",
    "type": "library",
    "homepage": "https://github.com/carboneio/carbone-carbone-sdk-php-php",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Carboneio\\CarboneSdk\\": "src/",
            "Carboneio\\CarboneSdk\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Steeve Payraudeau",
            "email": "16964532+steevepay@users.noreply.github.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.1",
        "sammyjo20/saloon": "^1.2",
        "spatie/data-transfer-object": "^3.8"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.5",
        "pestphp/pest": "^1.21",
        "spatie/ray": "^1.33"
    },
    "scripts": {
        "test": [
            "./vendor/bin/pest"
        ],
        "fix-code": [
            "./vendor/bin/php-cs-fixer fix"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
